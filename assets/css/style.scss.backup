---

@import "{{ site.theme }}";

/* ===================================
   FTH Custom Styles - Inspired by FEP
   =================================== */

/* Variables */
:root {
  --primary-color: #2563eb;
  --secondary-color: #7c3aed;
  --success-color: #10b981;
  --warning-color: #f59e0b;
  --danger-color: #ef4444;
  --dark: #1f2937;
  --light: #f9fafb;
  --gray: #6b7280;

  --nivel-1: #3b82f6;
  --nivel-2: #8b5cf6;
  --nivel-3: #ef4444;
  --nivel-4: #f59e0b;

  --spacing-xs: 0.5rem;
  --spacing-sm: 1rem;
  --spacing-md: 1.5rem;
  --spacing-lg: 2rem;
  --spacing-xl: 3rem;

  --radius: 0.5rem;
  --shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
  --shadow-lg: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
}

/* Typography */
body {
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
  line-height: 1.7;
  color: var(--dark);
}

h1, h2, h3, h4, h5, h6 {
  font-weight: 700;
  line-height: 1.3;
  margin-top: var(--spacing-lg);
  margin-bottom: var(--spacing-md);
}

h1 { font-size: 2.5rem; }
h2 { font-size: 2rem; }
h3 { font-size: 1.5rem; }

/* Hero Section */
.hero-section {
  text-align: center;
  padding: var(--spacing-xl) var(--spacing-md);
  background: linear-gradient(135deg, #4f46e5 0%, #7c3aed 100%);
  color: white;
  border-radius: var(--radius);
  margin-bottom: var(--spacing-xl);
  box-shadow: 0 4px 12px rgba(79, 70, 229, 0.2);
}

.hero-title {
  font-size: 3rem;
  margin-bottom: var(--spacing-md);
  animation: fadeInDown 0.8s ease-out;
}

.hero-subtitle {
  font-size: 1.5rem;
  font-weight: 600;
  margin-bottom: var(--spacing-sm);
  opacity: 0.95;
}

.hero-description {
  font-size: 1.125rem;
  max-width: 800px;
  margin: 0 auto var(--spacing-lg);
  opacity: 0.9;
}

/* CTA Buttons */
.cta-buttons {
  display: flex;
  gap: var(--spacing-md);
  justify-content: center;
  flex-wrap: wrap;
}

.btn {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  gap: 0.5rem;
  padding: 0.875rem 1.75rem;
  border-radius: var(--radius);
  text-decoration: none;
  font-weight: 600;
  transition: all 0.2s ease;
  border: none;
  cursor: pointer;
  font-size: 1rem;
  position: relative;
}

.btn::after {
  content: '→';
  font-size: 1.25rem;
  transition: transform 0.2s ease;
}

.btn:hover::after {
  transform: translateX(4px);
}

.btn-primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  box-shadow: 0 4px 12px rgba(102, 126, 234, 0.3);
}

.btn-primary:hover {
  transform: translateY(-2px);
  box-shadow: 0 8px 20px rgba(102, 126, 234, 0.4);
}

.btn-secondary {
  background-color: transparent;
  color: white;
  border: 2px solid white;
}

.btn-secondary:hover {
  background-color: rgba(255, 255, 255, 0.1);
}

.btn-large {
  padding: var(--spacing-md) var(--spacing-xl);
  font-size: 1.25rem;
}

.btn-nivel {
  background-color: var(--primary-color);
  color: white;
  width: 100%;
  margin-top: auto;
}

.btn-premium {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  width: 100%;
  margin-top: auto;
  box-shadow: 0 4px 12px rgba(102, 126, 234, 0.3);
}

.btn-premium:hover {
  box-shadow: 0 8px 20px rgba(102, 126, 234, 0.4);
}

.btn-trilha {
  color: var(--primary-color);
  font-weight: 600;
  text-decoration: none;
}

.btn-trilha:hover {
  text-decoration: underline;
}

/* Benefits Grid */
.benefits-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  gap: var(--spacing-lg);
  margin: var(--spacing-xl) 0;
}

.benefit-card {
  background: white;
  padding: var(--spacing-lg);
  border-radius: var(--radius);
  box-shadow: var(--shadow);
  text-align: center;
  transition: transform 0.3s ease;
}

.benefit-card:hover {
  transform: translateY(-5px);
  box-shadow: var(--shadow-lg);
}

.benefit-icon {
  font-size: 3rem;
  margin-bottom: var(--spacing-sm);
}

.benefit-card h3 {
  margin-top: var(--spacing-sm);
  margin-bottom: var(--spacing-sm);
  font-size: 1.25rem;
}

.benefit-card p {
  color: var(--gray);
  margin: 0;
}

/* Níveis Preview */
.niveis-preview {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
  gap: var(--spacing-lg);
  margin: var(--spacing-xl) 0;
}

.nivel-card {
  background: white;
  border-radius: var(--radius);
  padding: var(--spacing-lg);
  box-shadow: var(--shadow);
  display: flex;
  flex-direction: column;
  transition: transform 0.3s ease;
  border-top: 4px solid;
}

.nivel-1 { border-top-color: var(--nivel-1); }
.nivel-2 { border-top-color: var(--nivel-2); }
.nivel-3 { border-top-color: var(--nivel-3); }
.nivel-4 { border-top-color: var(--nivel-4); }

.nivel-card:hover {
  transform: translateY(-5px);
  box-shadow: var(--shadow-lg);
}

.nivel-header {
  display: flex;
  align-items: center;
  gap: var(--spacing-sm);
  margin-bottom: var(--spacing-md);
  flex-wrap: wrap;
}

.nivel-icon {
  font-size: 2rem;
}

.nivel-header h3 {
  margin: 0;
  flex: 1;
  font-size: 1.5rem;
}

.nivel-duracao {
  background: var(--light);
  padding: 0.25rem 0.75rem;
  border-radius: 9999px;
  font-size: 0.875rem;
  font-weight: 600;
  color: var(--gray);
}

.nivel-descricao {
  margin-bottom: var(--spacing-md);
  color: var(--gray);
}

.nivel-topicos {
  list-style: none;
  padding: 0;
  margin-bottom: var(--spacing-lg);
}

.nivel-topicos li {
  padding: var(--spacing-xs) 0;
  color: var(--gray);
}

/* Badges para níveis */
.nivel-badge {
  display: inline-block;
  padding: 0.375rem 1rem;
  border-radius: 9999px;
  font-size: 0.75rem;
  font-weight: 700;
  text-transform: uppercase;
  letter-spacing: 0.05em;
  margin-left: auto;
}

.nivel-badge.gratuito {
  background: #dcfce7;
  color: #166534;
}

.nivel-badge.premium {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  box-shadow: 0 2px 8px rgba(102, 126, 234, 0.3);
}

.nivel-card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: var(--spacing-md);
  gap: var(--spacing-sm);
}

/* Trilhas Grid */
.trilhas-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  gap: var(--spacing-lg);
  margin: var(--spacing-xl) 0;
}

.trilha-card {
  background: white;
  padding: var(--spacing-lg);
  border-radius: var(--radius);
  box-shadow: var(--shadow);
  text-align: center;
  transition: transform 0.3s ease;
}

.trilha-card:hover {
  transform: translateY(-5px);
  box-shadow: var(--shadow-lg);
}

.trilha-icon {
  font-size: 3rem;
  margin-bottom: var(--spacing-sm);
}

.trilha-card h3 {
  margin-top: var(--spacing-sm);
  margin-bottom: var(--spacing-sm);
}

.trilha-card p {
  color: var(--gray);
  margin-bottom: var(--spacing-md);
}

/* Stats Grid */
.stats-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
  gap: var(--spacing-lg);
  margin: var(--spacing-xl) 0;
  text-align: center;
}

.stat {
  padding: var(--spacing-lg);
  background: var(--light);
  border-radius: var(--radius);
}

.stat-number {
  font-size: 2.5rem;
  font-weight: 700;
  color: var(--primary-color);
  margin-bottom: var(--spacing-xs);
}

.stat-label {
  color: var(--gray);
  font-size: 0.875rem;
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 0.05em;
}

/* Testimonials */
.testimonials {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
  gap: var(--spacing-lg);
  margin: var(--spacing-xl) 0;
}

.testimonial {
  background: white;
  padding: var(--spacing-lg);
  border-radius: var(--radius);
  box-shadow: var(--shadow);
  border-left: 4px solid var(--primary-color);
}

.testimonial-text {
  font-style: italic;
  color: var(--gray);
  margin-bottom: var(--spacing-md);
}

.testimonial-author {
  font-weight: 600;
  color: var(--dark);
  margin: 0;
}

/* CTA Sections */
.cta-final, .cta-section {
  text-align: center;
  padding: var(--spacing-xl) var(--spacing-lg);
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border-radius: var(--radius);
  margin: var(--spacing-xl) 0;
}

.cta-final h2, .cta-section h2, .cta-section h3 {
  color: white;
  margin-top: 0;
}

.cta-note {
  margin-top: var(--spacing-sm);
  opacity: 0.8;
  font-size: 0.875rem;
}

.footer-cta {
  background: var(--light);
  padding: var(--spacing-lg);
  border-radius: var(--radius);
  margin: var(--spacing-xl) 0;
  text-align: center;
}

/* Tables */
table {
  width: 100%;
  border-collapse: collapse;
  margin: var(--spacing-lg) 0;
  background: white;
  box-shadow: var(--shadow);
  border-radius: var(--radius);
  overflow: hidden;
}

thead {
  background: var(--primary-color);
  color: white;
}

th, td {
  padding: var(--spacing-sm) var(--spacing-md);
  text-align: left;
  border-bottom: 1px solid #e5e7eb;
}

tr:last-child td {
  border-bottom: none;
}

tbody tr:hover {
  background: var(--light);
}

/* Responsive */
@media (max-width: 768px) {
  .hero-title {
    font-size: 2rem;
  }

  .hero-subtitle {
    font-size: 1.25rem;
  }

  .benefits-grid,
  .niveis-preview,
  .trilhas-grid {
    grid-template-columns: 1fr;
  }

  .cta-buttons {
    flex-direction: column;
  }

  .btn {
    width: 100%;
  }
}

/* Animations */
@keyframes fadeInDown {
  from {
    opacity: 0;
    transform: translateY(-20px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* Quiz Section */
.quiz-section {
  background: var(--light);
  padding: var(--spacing-lg);
  border-radius: var(--radius);
  margin: var(--spacing-lg) 0;
}

.quiz-section h3 {
  margin-top: 0;
}

/* Utility Classes */
.text-center { text-align: center; }
.mt-0 { margin-top: 0; }
.mb-0 { margin-bottom: 0; }
.text-primary { color: var(--primary-color); }
.text-gray { color: var(--gray); }
.font-bold { font-weight: 700; }
